<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chaerin.s4.bankbook.BankBookDAO">

	<select id="list" resultType="com.chaerin.s4.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK
	</select>

	<select id="detail"  resultType="com.chaerin.s4.bankbook.BankBookDTO">
		SELECT * FROM BANKBOOK WHERE BOOKNUMBER=#{bookNumber}
	</select>

	<insert id="add" parameterType="com.chaerin.s4.bankbook.BankBookDTO">
		insert into bankbook(booknumber, bookname, bookcontents, bookrate, booksale)
		values(bankbook_seq.nextval, #{bookName},#{bookContents}, #{bookRate}, #{bookSale})
	</insert>
	
	<delete id="delete" parameterType="com.chaerin.s4.bankbook.BankBookDTO" >
		delete bankbook where booknumber = #{bookNumber}
	</delete>
	<update id="update" parameterType="com.chaerin.s4.bankbook.BankBookDTO">
		UPDATE BANKBOOK SET BOOKNAME = #{bookName} where #{bookNumber}
	</update>




</mapper>
